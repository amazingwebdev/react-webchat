{
  "name": "botframework-webchat",
  "version": "0.10.2",
  "description": "Embeddable web chat control for the Microsoft Bot Framework",
  "main": "built/BotChat.js",
  "types": "built/BotChat.d.ts",
  "scripts": {
    "build-test": "tsc -p ./test/mock_dl && tsc -p ./test",
    "build-css": "node ./src/scss/compile.js botchat botchat-fullwindow",
    "build": "tsc && npm run build-css && webpack",
    "watch": "npm-run-all -p -r -l tsc-watch webpack-watch",
    "tsc-watch": "tsc -w",
    "webpack-watch": "webpack -w",
    "clean": "rm -rf built",
    "prepublish": "tsc && npm run build-css && webpack --config webpack.production.config.js",
    "start": "http-server -p 8000",
    "test": "concurrently  \"node test/mock_dl/index.js\" \"mocha test\" "
  },
  "repository": {
    "type": "git",
    "url": "git://git@github.com/Microsoft/BotFramework-WebChat.git"
  },
  "author": "Microsoft Corp",
  "license": "MIT",
  "dependencies": {
    "botframework-directlinejs": "^0.9.4",
    "core-js": "^2.4.1",
    "he": "^1.1.0",
    "marked": "^0.3.6",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "redux": "^3.6.0",
    "redux-observable": "^0.13.0",
    "rxjs": "^5.0.3",
    "tslib": "^1.5.0"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/chai": "^3.4.34",
    "@types/chai-subset": "^1.0.29",
    "@types/deep-freeze": "0.0.29",
    "@types/express": "^4.0.35",
    "@types/he": "^0.5.29",
    "@types/marked": "0.0.28",
    "@types/react": "^15.0.14",
    "@types/react-dom": "^0.14.23",
    "body-parser": "^1.16.0",    
    "chai": "^3.5.0",
    "chai-subset": "^1.4.0",
    "concurrently": "^3.1.0",
    "deep-freeze": "0.0.1",
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "fs-extra": "^1.0.0",
    "http-server": "^0.9.0",
    "mocha": "^3.2.0",
    "nightmare": "^2.8.1",
    "nodemon": "^1.11.0",
    "node-sass": "^4.5.0",
    "npm-run-all": "^3.1.2",
    "remote": "^0.2.6",
    "source-map-loader": "^0.1.5",
    "ts-loader": "^1.3.3",
    "typescript": "^2.1.5",
    "vo": "^4.0.2",
    "webpack": "^1.14.0"
  }
}
